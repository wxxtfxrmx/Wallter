<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Wallter" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryDark</item>
        <item name="colorOnPrimary">@color/primaryLight</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">@color/primaryDark</item>
        <item name="android:navigationBarColor">@color/primaryDark</item>
    </style>

    <style name="WallterEditText" parent="Widget.Design.TextInputLayout">
        <item name="colorControlNormal">@color/primaryDark</item>
        <item name="colorControlActivated">@color/primaryDark</item>
    </style>
</resources>